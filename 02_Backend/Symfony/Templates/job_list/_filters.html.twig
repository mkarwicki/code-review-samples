<div class="job-list-filters"
    {% if app.request.get('sector') or app.request.get('location') or app.request.get('zip') %} style="display: block" {% endif %}
>
    {#
        SECTORS
    #}
    <div class="filter-group">
        <div class="row">
            <div class="col-12 col-md-3">
                <div class="form-group">
                    <label>
                        Sector
                    </label>
                    <select class="form-control" name="sector">
                        <option value="">
                            All
                        </option>
                        {% for key,id in sectorsData %}
                            <option value="{{ id }}" {% if app.request.get('sector') == id %} selected {% endif %}>
                                {{ key }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
    </div>
    {#
        LOCATION AND ZIP
     #}
    <div class="filter-group">
        <div class="row">
            <div class="col-12 col-md-3">
                <div class="form-group">
                    <label>
                        Location
                    </label>
                    <select class="form-control" name="location">
                        <option value="">
                            Online &amp; local jobs
                        </option>
                        <option value="1" {% if app.request.get('location') == 1 %} selected {% endif %}>
                            Local jobs
                        </option>
                        <option value="2" {% if app.request.get('location') == 2 %} selected {% endif %}>
                            Online
                        </option>
                    </select>
                </div>
            </div>
            <div class="col-12 col-md-3">
                <div class="form-group">
                    <label>
                        ZIP code
                    </label>
                    <input class="form-control" {% if app.request.get('location') != 1 %} disabled {% endif %}
                           name="zip" value="{{ app.request.get('zip') }}"/>
                </div>
            </div>
        </div>
    </div>
    <button class="btn btn-primary btn-sm">Apply filters</button>
</div>

